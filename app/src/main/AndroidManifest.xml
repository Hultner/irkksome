<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.alkohest.irkksome" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".IrkksomeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.ChatActivity"
            android:label="@string/title_activity_chat"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.NewConnectionActivity"
            android:label="@string/title_connect_to_server"/>
        <activity android:name=".ui.PubkeyManagementActivity"
            android:label="@string/title_manage_pubkeys"/>
        <service android:name=".ui.fragment.pubkey.PubkeyUploadTask"
            android:exported="false"/>
    </application>

</manifest>
